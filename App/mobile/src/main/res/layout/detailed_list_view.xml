<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id = "@+id/detailed_img"
            android:layout_width="165dp"
            android:layout_height="195dp"
            android:scaleType="fitXY" />

        <TextView android:id = "@+id/detailed_party"
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop = "true"
            android:layout_toRightOf="@+id/detailed_img"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize = "11pt"
            android:textColor = "#2E2E2E" />

        <TextView android:id = "@+id/detailed_term"
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/detailed_img"
            android:layout_below="@+id/detailed_party"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize = "11pt"
            android:textColor = "#2E2E2E" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:gravity="center"
        android:textColor = "#2E2E2E"
        android:textSize = "11pt"
        android:text = "Current Committees:" />

    <LinearLayout android:id="@+id/committee_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EFF5FB"
        >
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:gravity="center"
        android:textColor = "#2E2E2E"
        android:textSize = "11pt"
        android:text = "Sponsored Bills:" />

    <LinearLayout android:id="@+id/bills_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EFF5FB">
    </LinearLayout>


</LinearLayout>