<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/congressional_img"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop = "true"
            android:scaleType="fitXY"/>

        <Button android:id = "@+id/more_info"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint= "@string/details"
            android:textSize = "6.5pt"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:color = "#A9BDBDBD"
            android:onClick="moreInfo">

        </Button>

    </LinearLayout>

    <LinearLayout android:id = "@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/congressional_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize = "8pt"
            android:textColor = "#424242" />

        <TextView
            android:id="@+id/congressional_party"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below = "@id/congressional_name"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"
            android:textSize = "7.5pt" />

        <TextView
            android:id="@+id/congressional_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below = "@id/congressional_party"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"
            android:textSize = "7pt"
            android:textColor = "#424242"/>
            <!--android:autoLink="web"/>-->

        <TextView
            android:id="@+id/congressional_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below = "@id/congressional_email"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"
            android:textSize = "7pt"
            android:textColor = "#424242" />

        <TextView
            android:id="@+id/congressional_tweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below = "@id/congressional_website"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"
            android:gravity = "center"
            android:textSize = "6pt"
            android:textColor = "#424242"
            android:background="@drawable/border" />

    </LinearLayout>


</LinearLayout>

