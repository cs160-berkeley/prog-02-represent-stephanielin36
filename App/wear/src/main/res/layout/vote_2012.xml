<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".CongressionalView"
    android:orientation="vertical"
    tools:deviceIds="wear_round"
    android:background="@drawable/american_flag">

    <android.support.wearable.view.CardFrame
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:backgroundTint ="#fffae6">

        <LinearLayout android:id = "@+id/screen"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView android:id = "@+id/county"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="hello"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="5pt"/>

            <TextView android:id = "@+id/obama_results"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="bye"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="4pt"/>

            <TextView android:id = "@+id/romney_results"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="bye"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="4pt"/>

        </LinearLayout>
    </android.support.wearable.view.CardFrame>


</LinearLayout>